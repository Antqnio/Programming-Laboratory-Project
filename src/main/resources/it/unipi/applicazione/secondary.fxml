<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.applicazione.SecondaryController" style="-fx-background-color: #dfe6e9; -fx-padding: 20;">
    <children>
        <!-- Header -->
        <Label fx:id="searchText" text="ZeldaWiki" style="-fx-font-size: 24; -fx-font-family: 'Georgia'; -fx-text-fill: #e1b12c; -fx-font-weight: bold;" />

        <!-- Logout Button -->
        <Button fx:id="logoutButton" onAction="#logout" text="Logout" style="-fx-background-color: #e17055; -fx-text-fill: white; -fx-font-weight: bold;" />

        <!-- Language Switcher -->
        <Button fx:id="switchLanguageButton" mnemonicParsing="false" onAction="#switchLanguage" text="Button" style="-fx-background-color: #fab1a0; -fx-text-fill: #2d3436; -fx-font-weight: bold;" />

        <!-- Search Field -->
        <TextField fx:id="searchField" onAction="#openResultsTab" style="-fx-background-color: #ffffff; -fx-border-color: #e1b12c; -fx-border-radius: 5; -fx-border-width: 2; -fx-text-fill: #2d3436;" />

        <!-- Favorites Button -->
        <Button fx:id="favoritesButton" mnemonicParsing="false" onAction="#goToFavoritesMenu" text="Button" style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-weight: bold;" />
    </children>
</VBox>
